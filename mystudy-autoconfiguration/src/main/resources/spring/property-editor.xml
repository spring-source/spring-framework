<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="userBean" class="com.dujie.propertyeditor.domain.UserBean">
		<property name="birthday" value="2016-08-20"/>
	</bean>
	<!--	自定义属性编辑器注册到Spring-->
	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="java.util.Date" value="com.dujie.propertyeditor.property.DatePropertyEditor"/>
			</map>
		</property>
	</bean>

	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="propertyEditorRegistrars">
			<list>
				<bean class="com.dujie.propertyeditor.property.DatePropertyEditorRegistrar"/>
			</list>
		</property>
	</bean>


</beans>